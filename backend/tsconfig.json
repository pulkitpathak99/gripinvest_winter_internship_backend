{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src", // <-- CORRECTED
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "paths": {
      "api/*": ["api/*"],
      "config/*": ["config/*"],
      "utils/*": ["utils/*"],
      "middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["src"]
}
